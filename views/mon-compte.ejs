<%- include('_head') %> 
<%- include('_header') %> 

<main>
  <h1>Mon compte</h1>
  <section>
    <form class ="form_registration" method="POST">
      <div id="avatar">
        <label for="btn_avatar">
          <img src="/assets/img/avatars/<%= avatars[id_avatar-1].filename %> " alt=""/>
        </label>
        <input type="hidden" name="avatar_id" value="<%= (locals.id_avatar && id_avatar !== '') ? id_avatar : 1 %>"/>
        <button id="btn_avatar">Modifier l'avatar</button>
      </div>

      <div>
        <label for="mail">Adresse e-mail :</label>
        <input type="email" id="mail" name="user_mail" value="<%= locals.mail ?? locals.user_mail %>" required/>
      </div>

      <div>
        <label for="username">Nom d'utilisateur :</label>
        <input type="text" id="username" name="user_name" value="<%= locals.user_name %>" required/>
      </div>

      <div>
        <label for="old_password">Ancien mot de passe :</label>
        <input type="password" id="old_password" name="old_password" />
      </div>

      <div>
        <label for="new_password">Nouveau mot de passe :</label>
        <input type="password" id="new_password" name="new_password" />
      </div>

      <div class="edit">
        <button type="submit" class="btn btn_edit">Modifier</button>
      </div>
    </form>
  </section>
  <section class="section_avatar">
    <% for(avatar of avatars){ %> 
    <img class="img_avatar" src="/assets/img/avatars/<%= avatar.filename %>" data-avatar="<%= avatar.id_avatar %>">
    <% } %> 
  </section>
</main>
<script src="/assets/js/avatars.js"></script>

<%- include('_footer') %> 
